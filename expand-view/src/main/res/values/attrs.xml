<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 被折叠的textview id -->
    <attr name="expand_textView_id" format="reference" />
    <!-- 被折叠textview底部的自定义布局, 允许为空 -->
    <attr name="expand_bottom_layout" format="reference" />
    <!-- 收起后可显示的最大行数 -->
    <attr name="expand_collapse_max_line" format="integer" />
    <!-- 折叠动画时长 -->
    <attr name="expand_anim_duration" format="integer" />
    <!-- 被折叠的textview是否响应点击事件 -->
    <attr name="expand_text_clickable" format="boolean" />
    <!-- 行高倍数 lineSpacingMultiplier跟textView的属性需要相同 -->
    <attr name="expand_line_spacing_multiplier" format="float" />

    <declare-styleable name="ExpandLinearLayout">
        <attr name="expand_textView_id" />
        <attr name="expand_bottom_layout" />
        <attr name="expand_collapse_max_line" />
        <attr name="expand_anim_duration" />
        <attr name="expand_text_clickable" />
        <attr name="expand_line_spacing_multiplier" />
    </declare-styleable>

    <declare-styleable name="ExpandFrameLayout">
        <attr name="expand_textView_id" />
        <attr name="expand_bottom_layout" />
        <attr name="expand_collapse_max_line" />
        <attr name="expand_anim_duration" />
        <attr name="expand_text_clickable" />
        <attr name="expand_bottom_expand_height" format="dimension" />
        <attr name="expand_line_spacing_multiplier" />
    </declare-styleable>
</resources>